<Window x:Class="proYP04.EmployeeWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proYP04"
        mc:Ignorable="d"
        FontFamily="Bahnschrift"
        Title="EmployeeWin" Height="480" Width="830">
    <Grid>
        <TabControl>
            <TabItem Header="Личный кабинет">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Image x:Name="Iphoto" Width="200" Height="150" Grid.Column="0" Grid.Row="0" Margin="20" Grid.RowSpan="5"/>

                    <TextBlock Text="Имя: " Grid.Column="1" Grid.Row="0" FontSize="19" Height="30" />
                    <TextBlock x:Name="userName" Grid.Column="2" Grid.Row="0" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserName" Grid.Row="0" Grid.Column="2" Width="200" Height="30" FontSize="19" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserName_PreviewTextInput"/>

                    <TextBlock Text="Фамилия: " Grid.Column="1" Grid.Row="1" FontSize="19" Height="30" />
                    <TextBlock x:Name="userSurname" Grid.Column="2" Grid.Row="1" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserSurname" Grid.Row="1" Grid.Column="2" Width="200" Height="30" FontSize="19" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserSurname_PreviewTextInput"/>

                    <TextBlock Text="Отчество: " Grid.Column="1" Grid.Row="2" FontSize="19" Height="30" />
                    <TextBlock x:Name="userPatronymic" Grid.Column="2" Grid.Row="2" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserPatronymic" Grid.Row="2" Grid.Column="2" Width="200" Height="30" FontSize="19" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserPatronymic_PreviewTextInput"/>

                    <TextBlock Text="Дата рождения: " Grid.Column="1" Grid.Row="3" FontSize="19" Height="30" />
                    <TextBlock x:Name="userBorn"  Grid.Column="2" Grid.Row="3" FontSize="19" Height="30" />
                    <DatePicker x:Name="DPuserBorn" Grid.Row="3" Grid.Column="2" Width="200" Height="30" VerticalAlignment="Center" FontSize="19"  Margin="0,0,0,10" Visibility="Collapsed"/>

                    <TextBlock Text="Телефон: " Grid.Column="1" Grid.Row="4" FontSize="19" Height="30" />
                    <TextBlock x:Name="userPhone" Grid.Column="2" Grid.Row="4" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserPhone" Grid.Row="4" Grid.Column="2" Width="200" FontSize="19" Height="30" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserPhone_PreviewTextInput"/>

                    <TextBlock Text="Почта: " Grid.Column="1" Grid.Row="5" FontSize="19" Height="30" />
                    <TextBlock x:Name="userEmail" Grid.Column="2" Grid.Row="5" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserEmail" Grid.Row="5" Grid.Column="2" Width="200" FontSize="19" Height="30" Visibility="Collapsed"/>

                    <TextBlock Text="Логин: " Grid.Column="1" Grid.Row="6" FontSize="19" Height="30" />
                    <TextBlock x:Name="userLogin" Grid.Column="4" Grid.Row="6" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserLogin" Grid.Row="6" Grid.Column="2" Width="200" FontSize="19" Height="30" Visibility="Collapsed"/>

                    <TextBlock Text="Серия паспорта: " Grid.Column="1" Grid.Row="7" FontSize="19" Height="30" />
                    <TextBlock x:Name="userPasswordSerias" Grid.Column="4" Grid.Row="7" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserPasswordSerias" Grid.Row="7" Grid.Column="2" Width="200" FontSize="19" Height="30" Visibility="Collapsed" PreviewTextInput="TBuserPasswordSerias_PreviewTextInput"/>

                    <TextBlock Text="Номер паспорта: " Grid.Column="1" Grid.Row="8" FontSize="19" Height="30" />
                    <TextBlock x:Name="userPassportNumber" Grid.Column="4" Grid.Row="8" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserPassportNumber" Grid.Row="8" Grid.Column="2" Width="200" FontSize="19" Height="30" Visibility="Collapsed" PreviewTextInput="TBuserPassportNumber_PreviewTextInput"/>


                    <Button x:Name="BTNeditUser" Grid.Row="10" Grid.Column="1" Background="#FF49758C" Foreground="White" Margin="10,10" Width="200" Height="60" Content="Редактировать" FontSize="22" Click="BTNeditUser_Click"/>
                    <Button x:Name="BTNsaveChange" HorizontalAlignment="Left" Content="Сохранить изменения" Background="#FF49758C" Foreground="White" Width="200" Height="60" Grid.Row="10" Grid.Column="2" FontSize="18" Click="BTNsaveChange_Click"/>
                    <Button x:Name="btnEditImg" Grid.Row="10" Grid.Column="0" Background="#FF49758C" Foreground="White" Margin="10,10" Width="200" Height="60" Content="Изменить аватар" FontSize="22" Click="btnEditImg_Click" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
