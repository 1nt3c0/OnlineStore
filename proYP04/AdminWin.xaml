<Window x:Class="proYP04.AdminWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proYP04"
        mc:Ignorable="d"
        FontFamily="Bahnschrift"
        Title="AdminWin" Height="600" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="Личные кабинеты сотрудников" Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Сотрудник" FontSize="16" Grid.Column="0" Grid.Row="0" Margin="10" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CBEmployee" Grid.Row="0" FontSize="16" Grid.Column="0" HorizontalAlignment="Right" Width="200" Height="30" VerticalAlignment="Center" SelectionChanged="CBEmployee_SelectionChanged" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Имя: " Grid.Column="0" Grid.Row="1" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userName" Grid.Column="1" Grid.Row="1" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserName" Grid.Row="1" Grid.Column="1" Width="200" Height="30" FontSize="19" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserName_PreviewTextInput"/>

                    <TextBlock Text="Фамилия: " Grid.Column="0" Grid.Row="2" FontSize="19" Height="30" Margin="10,0" />
                    <TextBlock x:Name="userSurname" Grid.Column="1" Grid.Row="2" FontSize="19" Height="30"/>
                    <TextBox x:Name="TBuserSurname" Grid.Row="2" Grid.Column="1" Width="200" Height="30" FontSize="19" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserSurname_PreviewTextInput"/>

                    <TextBlock Text="Отчество: " Grid.Column="0" Grid.Row="3" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userPatronymic" Grid.Column="1" Grid.Row="3" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserPatronymic" Grid.Row="3" Grid.Column="1" Width="200" Height="30" FontSize="19" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserPatronymic_PreviewTextInput"/>

                    <TextBlock Text="Дата рождения: " Grid.Column="0" Grid.Row="4" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userBorn"  Grid.Column="1" Grid.Row="4" FontSize="19" Height="30" />
                    <DatePicker x:Name="DPuserBorn" Grid.Row="4" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" FontSize="19"  Margin="0,0,0,10" Visibility="Collapsed"/>

                    <TextBlock Text="Телефон: " Grid.Column="0" Grid.Row="5" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userPhone" Grid.Column="1" Grid.Row="5" FontSize="19" Height="30" />
                    <TextBox x:Name="TBuserPhone" Grid.Row="5" Grid.Column="1" Width="200" FontSize="19" Height="30" Margin="0,0,0,10" Visibility="Collapsed" PreviewTextInput="TBuserPhone_PreviewTextInput"/>

                    <TextBlock Text="Почта: " Grid.Column="0" Grid.Row="6" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userEmail" Grid.Column="1" Grid.Row="6" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserEmail" Grid.Row="6" Grid.Column="1" Width="200" FontSize="19" Height="30" Visibility="Collapsed"/>

                    <TextBlock Text="Логин: " Grid.Column="0" Grid.Row="7" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userLogin" Grid.Column="1" Grid.Row="7" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserLogin" Grid.Row="7" Grid.Column="1" Width="200" FontSize="19" Height="30" Visibility="Collapsed"/>

                    <TextBlock Text="Серия паспорта: " Grid.Column="0" Grid.Row="8" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userPasswordSerias" Grid.Column="1" Grid.Row="8" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserPasswordSerias" Grid.Row="8" Grid.Column="1" Width="200" FontSize="19" Height="30" Visibility="Collapsed" PreviewTextInput="TBuserPasswordSerias_PreviewTextInput"/>

                    <TextBlock Text="Номер паспорта: " Grid.Column="0" Grid.Row="9" FontSize="19" Height="30" Margin="10,0"/>
                    <TextBlock x:Name="userPassportNumber" Grid.Column="1" Grid.Row="9" FontSize="19" Height="30"  />
                    <TextBox x:Name="TBuserPassportNumber" Grid.Row="9" Grid.Column="1" Width="200" FontSize="19" Height="30" Visibility="Collapsed" PreviewTextInput="TBuserPassportNumber_PreviewTextInput"/>

                    <Button x:Name="BTNsaveChange" Background="#FF49758C" Foreground="White" Content="Сохранить изменения" Width="200" Height="60" Grid.Row="10" Grid.Column="1" FontSize="18" Click="BTNsaveChange_Click"/>
                    <Button x:Name="BTNeditUser" Background="#FF49758C" Foreground="White" Grid.Row="10" Grid.Column="0" Margin="10,10" Width="200" Height="60" Content="Редактировать" FontSize="22" Click="BTNeditUser_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Добавление нового сотрудника">
                <Grid Margin="20" Width="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" FontSize="16" Content="Фамилия:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" FontSize="16" x:Name="TBsurname"  Margin="0,0,0,5" PreviewTextInput="TBsurname_PreviewTextInput"/>

                    <Label Grid.Row="1" Grid.Column="0" FontSize="16" Content="Имя:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" FontSize="16" x:Name="TBname" Margin="0,0,0,5" PreviewTextInput="TBname_PreviewTextInput"/>

                    <Label Grid.Row="2" Grid.Column="0" FontSize="16" Content="Отчество:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" FontSize="16" x:Name="TBpatronymic" Margin="0,0,0,5" PreviewTextInput="TBpatronymic_PreviewTextInput"/>

                    <Label Grid.Row="3" Grid.Column="0" FontSize="16" Content="Email:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" FontSize="16" x:Name="TBemail" Margin="0,0,0,5"/>

                    <Label Grid.Row="4" Grid.Column="0" FontSize="16" Content="Логин:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="4" Grid.Column="1" FontSize="16" x:Name="TBloginReg" Margin="0,0,0,5"/>

                    <Label Grid.Row="5" Grid.Column="0" FontSize="16" Content="Пароль:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="5" Grid.Column="1" FontSize="16" Margin="0,0,0,5" x:Name="regTBpassword" Visibility="Collapsed" TextChanged="regTBpassword_TextChanged"/>
                    <PasswordBox Grid.Row="5" Grid.Column="1" FontSize="16" x:Name="PBpassword" Margin="0,0,0,5" PasswordChanged="PBpassword_PasswordChanged"/>
                    <CheckBox x:Name="regCheckBox" Grid.Row="5" FontSize="16" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,6,4" Click="regCheckBox_Click"/>

                    <Label Grid.Row="6" FontSize="16" Grid.Column="0" Content="Должность:" Margin="0,0,10,5"/>
                    <ComboBox Name="CBrole" FontSize="16" Grid.Column="1" Grid.Row="6" Margin="0,0,0,5"/>

                    <Label Grid.Row="7" Grid.Column="0" FontSize="16" Content="Серия паспорта:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="7" Grid.Column="1" FontSize="16" x:Name="TBserPas" Margin="0,0,0,5" PreviewTextInput="TBserPas_PreviewTextInput"/>

                    <Label Grid.Row="8" Grid.Column="0" FontSize="16" Content="Номер паспорта:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="8" Grid.Column="1" FontSize="16" x:Name="TBnumPas" Margin="0,0,0,5" PreviewTextInput="TBnumPas_PreviewTextInput"/>

                    <Label Grid.Row="9" Grid.Column="0" FontSize="16" Content="Подразделение:" Margin="0,0,10,5"/>
                    <ComboBox Grid.Row="9" Grid.Column="1" FontSize="16" x:Name="CBsubdivision" Margin="0,0,0,5"/>

                    <Label Grid.Row="10" Grid.Column="0" FontSize="16" Content="Номер телефона:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="10" Grid.Column="1" FontSize="16" x:Name="TBnumPhone" Margin="0,0,0,5" PreviewTextInput="TBnumPhone_PreviewTextInput"/>

                    <Label Grid.Row="11" Grid.Column="0" FontSize="16" Content="Дата рождения:" Margin="0,0,10,5"/>
                    <DatePicker Grid.Row="11" Grid.Column="1" FontSize="16" x:Name="DPborn" Margin="0,0,0,5" />

                    <Button x:Name="BTNreg" Grid.Row="12" FontSize="16" Grid.Column="0" Grid.ColumnSpan="2" 
                                    Content="Зарегистрироваться" 
                                    Margin="0,10,0,0"
                                    Height="40"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center"
                                    Width="200" Click="BTNreg_Click" Background="#FF49758C" Foreground="White"/>
                </Grid>
            </TabItem>
            <TabItem Header="История входа">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="500"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Поиск по логину: " VerticalAlignment="Center" Grid.Row="0"/>
                        <TextBox Grid.Row="0" x:Name="TBfindUser" Width="200" Margin="0,5" HorizontalAlignment="Left" Height="20" TextChanged="TextBox_TextChanged"/>
                    </StackPanel>
                    <DataGrid x:Name="DGEmployee" Grid.Row="1" AutoGenerateColumns="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding Сотрудник1.Фамилия}"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Сотрудник1.Имя}"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding Сотрудник1.Отчество}"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Сотрудник1.Логин}"/>
                            <DataGridTextColumn Header="Подразделение" Binding="{Binding Сотрудник1.Подразделение1.Наименование}"/>
                            <DataGridTextColumn Header="Номер телефона"  Binding="{Binding Сотрудник1.Номер_телефона}"/>
                            <DataGridTextColumn Header="Время входа" Binding="{Binding Дата_и_время, StringFormat=dd.MM.yyyy HH:mm}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
