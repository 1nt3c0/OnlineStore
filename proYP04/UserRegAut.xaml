<Window x:Class="proYP04.UserRegAut"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proYP04"
        mc:Ignorable="d"
        Title="UserRegAut" Height="450" Width="600" FontFamily="Bahnschrift">
    <Grid>
        <TabControl>
            <TabItem Header="Авторизация">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-80,0,0">
                    <Grid Width="240">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Логин" FontSize="22" Margin="0,0,0,0" Grid.Column="0"/>
                        <TextBox x:Name="TBlogin" FontSize="22" Width="130" BorderBrush="#FF1F8AED" HorizontalAlignment="Right"  Grid.Column="1" BorderThickness="0,0,0,1"/>
                    </Grid>
                    <Grid Width="240" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Пароль" FontSize="22" Margin="0,0,0,0" Grid.Column="0"/>
                        <TextBox x:Name="TBpassword" FontSize="22" Width="130" Grid.Column="1" BorderBrush="#FF1F8AED" BorderThickness="0,0,0,1" Visibility="Collapsed"/>
                        <PasswordBox x:Name="PBpassword1" FontSize="22" Width="130" Grid.Column="1" BorderBrush="#FF1F8AED" BorderThickness="0,0,0,1"/>
                        <CheckBox x:Name="CBpassword" VerticalAlignment="Center" Grid.Column="2" Margin="5,0" Click="CBpassword_Checked"/>
                    </Grid>
                    <StackPanel>
                        <Button x:Name="insert" Content="Войти" FontSize="22" Margin="0,10,0,0" Background="#FF49758C" Foreground="White" Click="insert_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Регистрация">
                <Grid HorizontalAlignment="Center" Margin="0,40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Фамилия:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="TBsurname"  Margin="0,0,0,5" PreviewTextInput="TBsurname_PreviewTextInput"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Имя:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="TBname" Margin="0,0,0,5" PreviewTextInput="TBname_PreviewTextInput"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Отчество:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="TBpatronymic" Margin="0,0,0,5" PreviewTextInput="TBpatronymic_PreviewTextInput"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Номер телефона:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="TBnumPhone" Margin="0,0,0,5" PreviewTextInput="TBnumPhone_PreviewTextInput"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Дата рождения:" Margin="0,0,10,5"/>
                    <DatePicker Grid.Row="4" Grid.Column="1" x:Name="DPborn" Margin="0,0,0,5" />

                    <Label Grid.Row="5" Grid.Column="0" Content="Пол:" Margin="0,0,10,5"/>
                    <ComboBox Name="CBgender" Grid.Column="1" Grid.Row="5" SelectedIndex="0"  Margin="0,0,0,5">
                        <ComboBoxItem Content="М - мужчина" Tag="М"/>
                        <ComboBoxItem Content="Ж - женщина" Tag="Ж"/>
                    </ComboBox>

                    <Label Grid.Row="6" Grid.Column="0" Content="Логин:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="6" Grid.Column="1" x:Name="TBloginReg" Margin="0,0,0,5"/>

                    <Label Grid.Row="7" Grid.Column="0" Content="Пароль:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="7" Grid.Column="1" Margin="0,0,0,5" x:Name="regTBpassword" Visibility="Collapsed" />
                    <PasswordBox Grid.Row="7" Grid.Column="1"  x:Name="PBpassword" Margin="0,0,0,5" />
                    <CheckBox x:Name="regCheckBox" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,6,4" Click="regCheckBox_Click"/>

                    <Label Grid.Row="8" Grid.Column="0" Content="Email:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="8" Grid.Column="1" x:Name="TBemail" Margin="0,0,0,5"/>

                    <Button x:Name="BTNreg" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                                    Content="Зарегистрироваться" 
                                    Margin="0,10,0,0"
                                    Height="40"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center"
                                    Width="150" Click="BTNreg_Click" Background="#FF49758C" Foreground="White"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
